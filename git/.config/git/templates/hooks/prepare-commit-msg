#!/bin/sh

# Attempts to prepend the JIRA ticket number generated from the branch.

# Format of ticket number
TICKET_FORMAT='[%s]'

# Retrieves ticket if possible, returns empty string otherwise
get_ticket_from_branch() {
  local branch="${1}"
  local branch_pattern='^(\w+/)?(\w+-[0-9]+).*$'
  local ticket_dest='\2'
  printf "%s" "${branch}" |\
    sed --regexp-extended --quiet "s:${branch_pattern}:${ticket_dest}:p" |\
    tr '[a-z]' '[A-Z]'
}

format_ticket() {
  local ticket="${1}"
  printf "${TICKET_FORMAT}" "${ticket}"
}

insert_ticket() {
  local branch="$(git symbolic-ref --short HEAD)"
  local ticket="$(get_ticket_from_branch "${branch}")"
  if [ -n "${ticket}" ]; then
    sed --in-place='.bak' "1s/^/$(format_ticket "${ticket}") /" "$1"
  fi
}


insert_ticket
