#!/bin/sh

# Attempts to prepend the JIRA ticket number generated from the branch.

FILEPATH="${1}"

# Returns empty string on failure
get_ticket_from_branch() {
  local branch="${1}"
  local branch_pattern='^([[:lower:]]{1,30}/)?([[:upper:]]{2,}-[[:digit:]]+)(-[[:alnum:]]+)+$'
  local ticket_dest='\2'
  printf '%s' "${branch}" |\
    sed --regexp-extended --quiet "s:${branch_pattern}:${ticket_dest}:p"
}

insert_ticket() {
  local filepath="${1}"
  local branch="$(git symbolic-ref --short HEAD)"
  local ticket="$(get_ticket_from_branch "${branch}")"
  if [ -n "${ticket}" ]; then
    sed --in-place "s/# References:/References "${ticket}"/" "${filepath}"
  fi
}

insert_ticket "${FILEPATH}"
