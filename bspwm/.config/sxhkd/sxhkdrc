#
# bspwm hotkeys
#

# Logout
super + alt + Escape
	bspc quit

# Exit the current window
super + w
	bspc window -c

# Cycle through layouts (tiled,monocle)
super + t
	bspc desktop -l next

# Balance desktop to default positioning.
super + b
	bspc desktop -B

# Toggle between floating and fullscreen
super + {s,f}
	bspc window -t {floating,fullscreen}

super + {grave,Tab}
	bspc {window,desktop} -f last

# Swap current window and last one used.
super + apostrophe
	bspc window -s last

# Cycle windows based on when they were last used.
super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc window -w last.manual

# Swap current window with biggest one.
super + m
	bspc window -s biggest

# Move windows into different tiles.
super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

# Cycle windows
super + {_,shift + }c
	bspc window -f {next,prev}

# Circulate leaves of tree of current desktop
super + {comma,period}
	bspc desktop -C {backward,forward}

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	urxvtc

# Change the selected colour to xrdb's blue:
# -sb $(xrdb -q | grep color4 | cut -d$'\t' -f2)
super + space
	dmenu_run -h $PANEL_HEIGHT -p ">" -dim 0.5 -o 0.9

super + q
    pixel_lock.sh

# Browser choice.
#super + shift + Return
#    midori

# TODO Change this when connman_dmenu doesn't require sudo permissions anymore.
super + n
    /home/alexandre/connman_dmenu/connman_dmenu

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Volume settings
XF86AudioRaiseVolume
	amixer -q sset Master 5%+ unmute

XF86AudioLowerVolume
	amixer -q sset Master 5%-

XF86AudioMute
	amixer -q sset Master toggle

# Brightness settings
XF86MonBrightnessUp
	xbacklight -inc 10

XF86MonBrightnessDown
	xbacklight -dec 10

# Media keys
XF86AudioPlay
    playerctl play-pause

XF86AudioNext
    playerctl next

XF86AudioPrev
    playerctl previous

XF86AudioStop
    playerctl stop
