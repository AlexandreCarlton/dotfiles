# Note - this is X-specific; if we were using wayland then this would fail.

[Unit]
Description=xset - user preference utility for X
After=display-server.target

[Service]
Type=oneshot
RemainAfterExit=yes
#ExecStart=/usr/bin/xset +fp usr/share/fonts/local
#ExecStart=/usr/bin/xset +fp usr/share/fonts/OTF
#ExecStart=/usr/bin/xset +fp %h/.fonts
#ExecStart=/usr/bin/xset fp rehash
ExecStart=/usr/bin/xset b off

[Install]
WantedBy=desktop.target
