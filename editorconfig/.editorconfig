; vim:ft=cfg:

root = true

[*]
char_set = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = 79

[{bspwmrc,sxhkdrc}]
indent_size = 2
indent_style = tab

[{**/git/,.git}config]
indent_style = tab

[*.go]
indent_style = tab

[*.y{,a}ml]
indent_size = 2
indent_style = space

[{M,m}akefile]
indent_style = tab

[{pythonrc,*.py}]
indent_size = 4
indent_style = space
max_line_length = 79
