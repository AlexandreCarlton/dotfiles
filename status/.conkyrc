-- vim: ts=4 sw=4 noet ai cindent syntax=lua

conky.config = {
    short_units = true,
    background = false,
    pad_percents = 3,
    out_to_console = true,
    out_to_x = false,
    update_interval = 1,
    use_xft = true
}

--[[
template0 ~/.config/bspwm/panel/toggle_conky \1


# To get the icons, launch another instance of urxvtc
# This will mess up the powerline symbols, but it is only temporary.
# urxvtc -letsp 2 -fn "-*-gohufont-medium-*-*-*-11-*-*-*-*-*-iso10646-*","-misc-stlarch-medium-r-normal--10-100-75-75-c-80-iso10646-1"
# use charmap (select Private Use Area) to see available symbols.

# OSS Emulation may not always be enabled;
# In /etc/modules-load.d/ create a file called snd-mixer-oss.conf
# containing 1 line:
# snd-mixer-oss

# %{F\#fffdf6e3}Thing%{F-} \
]]

conky.text = [[
S \
CPU %{F\#fffdf6e3}${cpu cpu1} ${cpu cpu2} ${cpu cpu3} ${cpu cpu4}%{F-} \
\
\
RAM %{F\#fffdf6e3}${mem}%{F-} \
\
\
${if_match ${wireless_link_qual_perc wlp1s0b1} <= 25}\
▂___\
${else}${if_match ${wireless_link_qual_perc wlp1s0b1} <= 50}\
▂▄__\
${else}${if_match ${wireless_link_qual_perc wlp1s0b1} <= 75}\
▂▄▆_\
${else}\
▂▄▆█\
${endif}${endif}${endif} \
%{F\#fffdf6e3}${wireless_essid wlp1s0b1}%{F-} \
\
\
VOL\
%{F\#fffdf6e3}\
${if_existing /dev/mixer}\
${if_mixer_mute}\
\
${else}${if_match ${mixer} >= 66}\
\
${else}${if_match ${mixer} >= 33}\
\
${else}\
\
${endif}${endif}${endif} \
${mixer} \
${else}\
 ${execi 1 $HOME/.bin/volume.sh} \
${endif}\
%{F-}\
\
\
BAT \
%{F\#fffdf6e3}${battery_percent}\
${if_existing /sys/class/power_supply/AC/online 1}\
C⚡\
${endif}%{F-} \
\
\
PAC %{F\#fffdf6e3}${texeci 3600 checkupdates | wc -l}%{F-} \
\
\
ORP %{F\#fffdf6e3}${texeci 3600 pacman -Qdtq | wc -l}%{F-} \
\
\
${time %a %b %d} %{F\#fffdf6e3}${time %H:%M}%{F-}
]];
